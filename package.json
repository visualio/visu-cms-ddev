{
  "name": "visu-cms",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "node scripts/cleanTemp.js",
    "prebuild": "node scripts/cleanTemp.js",
    "prestart:admin": "node scripts/cleanTemp.js",
    "prebuild:admin": "node scripts/cleanTemp.js",
    "poststart": "npm run svg:sprite",
    "postbuild": "npm run svg:sprite",
    "start": "cross-env APP_ENV=development APP_MODULE=front vite",
    "build": "cross-env APP_ENV=production APP_MODULE=front vite build && cross-env APP_MODULE=front node scripts/optimizeImages.mjs",
    "start:admin": "cross-env APP_ENV=development APP_MODULE=admin vite",
    "build:admin": "cross-env APP_ENV=production APP_MODULE=admin vite build && cross-env APP_MODULE=admin node scripts/optimizeImages.mjs",
    "lint:js": "eslint dev/**/*.js --fix",
    "svg:sprite": "svg-sprite -D www/dist/front -C svgsprite.config.json dev/front/icons/*.svg",
    "test": "echo \"Error: no test specified\" && exit 1",
    "composer:update": "docker run -it --rm -v $(pwd):/app composer update",
    "composer:outdated": "docker run -it --rm -v $(pwd):/app composer outdated",
    "serve": "php -S 127.0.0.1:8000 -t www",
    "test-php": "./vendor/bin/phpstan analyse",
    "test-latte": "./vendor/bin/latte-lint app",
    "ddev:build": "bash ./bin/generate-configs.sh && ./bin/build.sh",
    "ddev:start": "bash ./bin/start.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://matoustrca@bitbucket.org/visualiocz/visu-cms.git"
  },
  "keywords": [],
  "author": "Visualio",
  "license": "ISC",
  "homepage": "https://bitbucket.org/visualiocz/visu-cms#readme",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.23",
    "postcss-import": "^15.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.8.8",
    "sass": "^1.81.0",
    "sharp": "^0.32.6",
    "svg-sprite": "^2.0.2",
    "tailwindcss": "^3.3",
    "vite": "^4.3.3",
    "vite-plugin-live-reload": "^3.0.2"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "temp.js",
      "node_modules/",
      "polyfills.js",
      "www/"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-var": [
        "error"
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "prefer-const": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "object-shorthand": [
        "error"
      ],
      "quote-props": [
        "error",
        "as-needed"
      ],
      "no-array-constructor": [
        "error"
      ],
      "array-callback-return": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "template-curly-spacing": [
        "error"
      ],
      "no-eval": [
        "error"
      ],
      "no-loop-func": [
        "error"
      ],
      "no-new-func": [
        "error"
      ],
      "prefer-rest-params": [
        "error"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "no-param-reassign": [
        "error"
      ],
      "prefer-arrow-callback": [
        "error"
      ],
      "arrow-spacing": [
        "error"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "generator-star-spacing": [
        "error"
      ],
      "dot-notation": [
        "error"
      ],
      "one-var": [
        "error",
        "never"
      ],
      "no-multi-assign": [
        "error"
      ],
      "eqeqeq": [
        "error"
      ],
      "no-case-declarations": [
        "error"
      ],
      "brace-style": [
        "error"
      ],
      "spaced-comment": [
        "error"
      ],
      "keyword-spacing": [
        "error"
      ],
      "space-infix-ops": [
        "error"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "space-in-parens": [
        "error"
      ],
      "array-bracket-spacing": [
        "error"
      ],
      "comma-spacing": [
        "error"
      ],
      "computed-property-spacing": [
        "error"
      ],
      "func-call-spacing": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error"
      ],
      "comma-style": [
        "error"
      ],
      "camelcase": [
        "error"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-spread": [
        "warn"
      ],
      "prefer-destructuring": [
        "warn"
      ],
      "no-unneeded-ternary": [
        "warn"
      ],
      "no-else-return": [
        "warn"
      ],
      "padded-blocks": [
        "warn",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  },
  "dependencies": {
    "@uppy/core": "^3.2.0",
    "@uppy/drag-drop": "^3.0.2",
    "@uppy/locales": "^3.2.0",
    "@uppy/status-bar": "^3.1.1",
    "@uppy/tus": "^3.1.0",
    "@uppy/xhr-upload": "^3.2.0",
    "alpinejs": "^3.12.0",
    "choices.js": "^10.2.0",
    "flatpickr": "^4.6.13",
    "nette-forms": "^3.3.1",
    "tui-image-editor": "^3.15.3",
    "uikit": "^3.16.15",
    "uikit-sortable-tree": "github:blackhexagon/uikit-sortable-tree"
  }
}
